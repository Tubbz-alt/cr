+        osName = os.startsWith('win') ? 'Windows' :
+            os.startsWith('mac') ? 'Macos' : 'Linux'
+
+        def jdks = [
+            'Windows': [
+                'amd64': [
+                    url: deps['JDK_WINDOWS_URL'],
+                    sha256: deps['JDK_WINDOWS_SHA256']
